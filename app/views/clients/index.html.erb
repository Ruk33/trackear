<h1 class="text-4xl mb-10">Clientes</h1>

<% @clients.each do |client| %>
  <div class="mb-2">
    <%= render "shared/content/box" do %>
      <div class="grid grid-cols-3 gap-4">
        <div class="">
          <span class="text-lg"><%= client.first_name %> <%= client.last_name %></span><br />
          <span class="text-gray-600"><%= client.email %></span>
        </div>
        <div class="flex items-center">
          <svg class="w-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <%= client.address %>
        </div>
        <div class="flex items-center justify-end text-lg">
          <%= link_to edit_client_path(client) do %>
            <div class="flex items-center mr-2">
              <svg class="w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              <span>Editar</span>
            </div>
          <% end %>
          <%= link_to client, method: :delete, data: { confirm: 'Â¿Seguro deseas eliminar el cliente?' } do %>
            <div class="flex items-center text-red-400">
              <svg class="w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              <span>Borrar</span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<div class="text-center">
  <%= link_to 'Crear cliente', new_client_path, class: "btn btn-primary mt-2" %>
</div>
