<h1 class="text-2xl my-2">Cronómetro</h1>
<%= form_with(model: current_user.activity_stop_watches.new, class: "grid grid-cols-2 gap-4 bg-gray-200 p-5 border", local: true) do |form| %>
  <div>
    <%= form.text_area :description, placeholder: "¿En qué vas a trabajar?", class: "w-full p-3 border" %>
  </div>
  <div class="flex items-start">
    <div class="mr-3 w-full">
      <%= form.select :project_id, @active_contracts.collect { |c| [ "Proyecto: #{c.project.name}", c.project.id ] }, {}, class: "w-full px-3 py-2 border" %>
      <%= link_to new_project_path, class: "text-pink-500 hover:text-pink-400 block pt-1" do %>
        <div class="flex items-center">
          <svg class="w-5 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Crear nuevo proyecto</span>
        </div>
      <% end %>
    </div>
    <%= form.button class: "btn btn-primary" do %>
      <div class="flex items-center">
        <svg class="w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>Iniciar</span>
      </div>
    <% end %>
  </div>
<% end %>
